      <EditText
          android:id="@+id/editText1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:lines="10"
          android:imeOptions="actionDone"
          android:inputType="text"
          android:paddingLeft="12sp"
          android:textSize="@dimen/font_size"
          android:layout_below="@+id/textView1"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"
          android:layout_marginTop="15dp">

          <requestFocus />
      </EditText>

      <Button
          android:id="@+id/nextText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:enabled="true"
          style="@style/devanagari"
          android:text="@string/next_word"
          android:textSize="@dimen/font_size"
          android:layout_below="@+id/editText1"
          android:layout_alignParentRight="true" />

    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboardview"
        android:labelTextSize="22sp"
        android:keyTextSize="22sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible"
        android:keyTextColor="@color/offwhite"
        android:keyBackground="@color/bluegrey2"


        />
    <!-- android:keyBackground="@drawable/keyicon"        android:keyBackground="@color/darkgrey2"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPM:"
        android:textSize="16sp"
        android:id="@+id/textView"
        android:layout_below="@+id/nextText"
        android:layout_alignParentRight="true"
        />
